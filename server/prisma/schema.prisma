generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        String   @id @unique @default(uuid()) // уникальный индентификатор
  name      String? /// Имя.
  dateBirth String? // дата рождения
  email     String   @unique /// Email, логин пользователь.
  language  Language @default(russian) /// Язык
  password  String /// Пользовательский пароль.
  avatar    String? /// Ссылка на аватар пользователя.
  verify Boolean @default(false) // верификация
  premium Boolean @default(false) // премиум
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@unique([id, email])
  @@map("users")
}

enum Language {
  russian
  english
}


model DefaultAvatar {
   id        String   @id @unique @default(uuid()) // уникальный индентификатор
  name      String? /// Имя.
  dateBirth String? // дата рождения
  email     String   @unique /// Email, логин пользователь.
  language  Language @default(russian) /// Язык
  password  String /// Пользовательский пароль.
  avatar    String? /// Ссылка на аватар пользователя.
  verify Boolean @default(false) // верификация
  premium Boolean @default(false) // премиум
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@unique([id, email])
  @@map("default_avatars")
}